<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="666.0" prefWidth="1080.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <children>
        <HBox prefHeight="666.0" prefWidth="1080.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <!-- Reports Table Section -->
                <VBox prefWidth="700.0" spacing="10.0">
                    <children>
                        <Label text="Employee Reports" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <TableView fx:id="reportsTable" prefHeight="600.0">
                            <columns>
                                <TableColumn fx:id="monthCol" prefWidth="80.0" text="Month"/>
                                <TableColumn fx:id="yearCol" prefWidth="60.0" text="Year"/>
                                <TableColumn fx:id="totalHoursCol" prefWidth="90.0" text="Total Hours"/>
                                <TableColumn fx:id="grossSalaryCol" prefWidth="100.0" text="Gross Salary"/>
                                <TableColumn fx:id="netPayCol" prefWidth="100.0" text="Net Pay"/>
                                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- Summary Details Section -->
                <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
                    <children>
                        <Label text="Report Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <VBox spacing="5.0">
                            <Label text="Employee ID:"/>
                            <Label fx:id="empIdLabel" style="-fx-font-weight: bold;"/>
                            
                            <Label text="Month &amp; Year:"/>
                            <Label fx:id="monthYearLabel" style="-fx-font-weight: bold;"/>
                            
                            <Label text="Total Hours:"/>
                            <Label fx:id="totalHoursLabel" style="-fx-font-weight: bold;"/>
                            
                            <Label text="Gross Salary:"/>
                            <Label fx:id="grossSalaryLabel" style="-fx-font-weight: bold;"/>
                            
                            <Label text="Deductions:"/>
                            <Label fx:id="deductionsLabel" style="-fx-font-weight: bold;"/>
                            
                            <Label text="Net Pay:"/>
                            <Label fx:id="netPayLabel" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                            
                            <Label text="Status:"/>
                            <Label fx:id="statusLabel" style="-fx-font-weight: bold;"/>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
